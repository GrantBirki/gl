---
import { SITE } from '~/config/site/config.js';
import Layout from '~/layouts/PageLayout.astro';
import ModalImage from 'react-modal-image';

import Hero from '~/components/widgets/Hero.astro';
import hero from '~/config/pages/gallery/hero';
import gallery from '~/config/pages/gallery/gallery';

const meta = {
  title: SITE.title,
  description: SITE.description,
  dontUseTitleTemplate: true,
};

const galleryCss =
  'block h-full w-full rounded-lg object-cover object-center transition-shadow duration-300 ease-in-out hover:shadow-lg hover:shadow-black/20';
---

<Layout {meta}>
  <!-- Hero Widget ******************* -->

  {
    hero && hero.enabled && (
      <Hero
        padding={hero.padding}
        callToAction={{
          enabled: hero.callToAction.enabled,
          text: hero.callToAction.text,
          href: hero.callToAction.href,
          target: hero.callToAction.target,
          rel: hero.callToAction.rel,
          icon: hero.callToAction.icon,
        }}
        callToAction2={{
          enabled: hero.callToAction2.enabled,
          text: hero.callToAction2.text,
          href: hero.callToAction2.href,
          target: hero.callToAction2.target,
          rel: hero.callToAction2.rel,
          icon: hero.callToAction2.icon,
        }}
        image={{ enabled: hero.image.enabled, src: hero.image.src, alt: hero.image.alt }}
      >
        {hero.title.enabled && <Fragment slot="title" set:html={hero.title.text} />}

        {hero.subtitle.enabled && <Fragment slot="subtitle" set:html={hero.subtitle.text} />}
      </Hero>
    )
  }

  <!-- Gallery -->
  {
    gallery && gallery.enabled && (
      <div class="container mx-auto mb-20 px-5 py-2 lg:px-32 lg:pt-24">
        <div class="-m-1 flex flex-wrap md:-m-2">
          <div class="flex w-1/2 flex-wrap">
            <div class="w-1/2 p-1 md:p-2">
              <ModalImage
                client:only="react"
                small="https://tecdn.b-cdn.net/img/Photos/Horizontal/Nature/4-col/img%20(70).webp"
                large="https://tecdn.b-cdn.net/img/Photos/Horizontal/Nature/4-col/img%20(70).webp"
                alt="Hello World!"
                className={galleryCss}
              />
            </div>
            <div class="w-1/2 p-1 md:p-2">
              <ModalImage
                client:only="react"
                small="https://tecdn.b-cdn.net/img/Photos/Horizontal/Nature/4-col/img%20(72).webp"
                large="https://tecdn.b-cdn.net/img/Photos/Horizontal/Nature/4-col/img%20(72).webp"
                alt="Hello World!"
                className={galleryCss}
              />
            </div>
            <div class="w-full p-1 md:p-2">
              <ModalImage
                client:only="react"
                small="https://tecdn.b-cdn.net/img/Photos/Horizontal/Nature/4-col/img%20(73).webp"
                medium="https://tecdn.b-cdn.net/img/Photos/Horizontal/Nature/4-col/img%20(73).webp"
                large="https://tecdn.b-cdn.net/img/Photos/Horizontal/Nature/4-col/img%20(73).webp"
                alt="Hello World!"
                className={galleryCss}
              />
            </div>
          </div>
          <div class="flex w-1/2 flex-wrap">
            <div class="w-full p-1 md:p-2">
              <ModalImage
                client:only="react"
                small="https://tecdn.b-cdn.net/img/Photos/Horizontal/Nature/4-col/img%20(74).webp"
                medium="https://tecdn.b-cdn.net/img/Photos/Horizontal/Nature/4-col/img%20(74).webp"
                large="https://tecdn.b-cdn.net/img/Photos/Horizontal/Nature/4-col/img%20(74).webp"
                alt="Hello World!"
                className={galleryCss}
              />
            </div>
            <div class="w-1/2 p-1 md:p-2">
              <ModalImage
                client:only="react"
                small="https://tecdn.b-cdn.net/img/Photos/Horizontal/Nature/4-col/img%20(75).webp"
                medium="https://tecdn.b-cdn.net/img/Photos/Horizontal/Nature/4-col/img%20(75).webp"
                large="https://tecdn.b-cdn.net/img/Photos/Horizontal/Nature/4-col/img%20(75).webp"
                alt="Hello World!"
                className={galleryCss}
              />
            </div>
            <div class="w-1/2 p-1 md:p-2">
              <ModalImage
                client:only="react"
                small="https://tecdn.b-cdn.net/img/Photos/Horizontal/Nature/4-col/img%20(77).webp"
                medium="https://tecdn.b-cdn.net/img/Photos/Horizontal/Nature/4-col/img%20(77).webp"
                large="https://tecdn.b-cdn.net/img/Photos/Horizontal/Nature/4-col/img%20(77).webp"
                alt="Hello World!"
                className={galleryCss}
              />
            </div>
          </div>
        </div>
      </div>
    )
  }
  <!-- End of Gallery -->
</Layout>
